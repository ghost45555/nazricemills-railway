{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc/server",
    "module": "esnext",
    "target": "es2015",
    "moduleResolution": "node",
    "types": ["node"],
    "lib": ["es2018", "dom"]
  },
  "angularCompilerOptions": {
    "enableIvy": true,
    "skipTemplateCodegen": true,
    "skipMetadataEmit": true
  },
  "include": [
    "src/**/*.ts",
    "server.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/test.ts"
  ]
}
